<% include ../partials/header %>

<div class="ui main text container segment">
	<div class="ui dividing huge header">New Comment</div>
	<form class="ui form" action="/accounts/<%= account._id %>/comments" method="POST">
		<div class="field">
			<label>Comment</label>
			<textarea autofocus="true" name="comment[content]" placeholder="Comment here..." required></textarea>
			<!-- <input autofocus="true" type="text" name="comment[content]" placeholder="Comment here..." required> -->
		</div>
		<div class="field">
			<label>Author</label>
			<input type="text" name="comment[author]" placeholder="Name" required>
		</div>
		<input class="ui button" type="submit">
	</form>
</div>

